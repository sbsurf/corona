<div class="container">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Corona Environmental Consulting</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="http://www.nanakdev.com">Yuri Rivkind</a></li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </nav>


  <h3 id="title">City Lookup:</h3>

  <form class="form-inline">
    <div class="form-group">
      {{input type="text" placeholder="Enter city" value=city class="form-control"}}
      <button type="submit" class="btn btn-primary" {{action 'retrieve'}}>Retrieve</button>
    </div>

    <div {{bind-attr class="isSuccessful:visible:hidden"}}>
      <h3>Coordinates:</h3>

      <p class="text-success">
        <strong>LAT: {{lat}}</strong>
        <strong>LON: {{lng}}</strong>
      </p>
    </div>

    <div {{bind-attr class="isError:visible:hidden"}}>
      <br/>
      <p class="text-danger">
        <strong>{{errorMessage}}</strong>
      </p>
    </div>
  </form>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      {{google-map lat=lat lng=lng zoom=zoom}}
    </div>
  </div>
</div>
